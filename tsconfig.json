{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationMap": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es7"
    ],
    "module": "es6",
    "moduleResolution": "Node",
    "sourceMap": true,
    "target": "es2017",
    "allowJs": false,
    "strict": true,
    "outDir": "dist/es2015",
    "declarationDir": "./src",
    "incremental": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "other"
  ],
  "compileOnSave": true
}
